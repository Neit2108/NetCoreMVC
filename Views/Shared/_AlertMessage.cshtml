@{
    var message = TempData["StatusMessage"] as string;
}

@if(!string.IsNullOrEmpty(message))
{
    <div class="alert alert-info">
        @message
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}