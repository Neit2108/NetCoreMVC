@model NetCoreMVC.Models.PlanetModel

<h1>@Model.Name</h1>

<div class="card w-50">
    <img class="card-img-top" id="planetImg" src="/planet/@(Model.Name).jpg" alt="Planet Image" onerror="this.onerror=null;this.src='/planet/@(Model.Name).png';">

    <div class="card-body">
        <h5>@Model.Vietnamese_name</h5>
        <div class="card-text">
            @Model.Content
        </div>

        <a class="card-link" asp-action="Index">Các hành tinh</a>
    </div>
</div>