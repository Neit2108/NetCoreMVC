@using Microsoft.AspNetCore.Authorization

@inject IAuthorizationService AuthorizationService

@{
    var res = AuthorizationService.AuthorizeAsync(this.User, "ViewManageMenu").Result;
}

@if(res.Succeeded)
{
    <div class="dropdown">
        <a class="btn btn-outline-danger dropdown-toggle" href="#" id="managedropdownmenu" data-bs-toggle="dropdown">
            Manage
        </a>
        <div class="dropdown-menu" aria-labelledby="managedropdownmenu">
            <a class="dropdown-item" asp-action="Index" asp-controller="DbManage" asp-area="Database">Database</a>
            <a class="dropdown-item" asp-action="Index" asp-controller="Contact" asp-area="Contact">Contact</a>
            <a class="dropdown-item" asp-action="Index" asp-controller="Role" asp-area="Identity">Role</a>
            <a class="dropdown-item" asp-action="Index" asp-controller="User" asp-area="Identity">User</a>
        </div>
    </div>
}
